                @Html.DisplayFor(modelItem => item.MaDonHang)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DonHangnumber)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.Tenhang)
